
<%= javascript_include_tag "iframe" %>

<h1><%= @channel.name %></h1>

<% focus_article = @articles.first %>
<iframe id='iframe_window' src='<%=focus_article.url%>' width="720" height="720"></iframe>
<%= render partial: 'articles/feedback_form', locals: { article: focus_article } %>

<% @articles.each do |article| %>
<%= link_to "#{article.title}", article.url, class: "news_link" %><br><br>

<% end %>
