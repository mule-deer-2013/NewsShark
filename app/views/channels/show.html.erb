<h1 class='lead'><%= @channel.name %></h1>
<ul>

  <li><%= link_to 'delete station', {:controller => :channels, :action => 'destroy'}, :confirm => "Are you sure you want to delete this station?", :method => :delete %></li>
<h4><%= link_to "Your Channels", root_path %></h4>
<% @user_channels.each do |channel| %>
  <li><%= link_to channel.name, [@user, channel] %></li>
<% end %>
</ul>
<% focus_article = @articles.first %>
<iframe id='iframe_window' src='<%=focus_article.url%>' width="720" height="720"></iframe>

<%= render partial: 'articles/feedback_form', locals: { article: focus_article } %>

<div id="myCarousel" class="carousel slide" data-interval="false" wrap="true" style="background:grey; height:100px;">

  <div class="carousel-inner" style="background:white; height:100px">

    <% @articles.each_slice(5).with_index do |slice, index| %>
      <% if index == 0 %>
        <div class="active item">
          <% slice.each do |article| %>
            <div >
              <%= link_to "#{article.title}", article.url, "data-action" => user_channel_article_path(article.channel.user, article.channel, article), class: "news_link", "data-id" => article.id %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="item">
          <% slice.each do |article| %>
            <div >
              <%= link_to "#{article.title}", article.url, "data-action" => user_channel_article_path(article.channel.user, article.channel, article), class: "news_link" , "data-id" => article.id %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
