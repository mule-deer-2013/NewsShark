<h1><%= @channel.name %></h1>
      <ul>
        <li><%= link_to 'delete station', {:controller => :channels, :action => 'destroy'}, :confirm => "Are you sure you want to delete this station?", :method => :delete %></li>
      </ul>  
<% focus_article = @articles.first %> <!-- only saving keywords from first article? this needs to be fixed from a UI point of view  -->
<iframe id='iframe_window' src='<%=focus_article.url%>' width="720" height="720"></iframe>
<%= render partial: 'articles/feedback_form', locals: { article: focus_article } %>

<div id="myCarousel" class="carousel slide" data-interval="false">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <% @articles.each_slice(5).with_index do |slice, index| %>
    <% if index == 0 %>
      <% slice.each do |article| %>
        <div class="active item"><%= link_to "#{article.title}", article.url, id: "#{article.id}", class: "news_link" %>
        </div>
      <% end %>
    <% else %>
      <% slice.each do |article| %>
        <div class="item"><%= link_to "#{article.title}", article.url, id: "#{article.id}", class: "news_link" %>
        </div>
      <% end %>
    <% end %>
    <% end %>
<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>

